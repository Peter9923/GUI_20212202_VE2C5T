<Window x:Class="Menu.Windows.Description"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu.Windows"
        mc:Ignorable="d"
        Title="Description" Height="450" Width="450"
        FontSize="19"
        >
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <ScrollViewer HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock TextWrapping="Wrap">
                Description.....
                
            </TextBlock>
        </ScrollViewer>
        
        <Button Content="Close This Window" Margin="50,5,50,0" Grid.Row="1" Click="Button_Click"/>
    </Grid>
</Window>
